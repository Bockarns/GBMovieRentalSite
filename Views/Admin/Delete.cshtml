@model GBMovieRentalSite.Models.Movie

@{
    ViewData["Title"] = "Delete Movie";
}

<div class="container mt-4">
    <div class="row">
        <div class="col-md-8 offset-md-2">
            <h1 class="display-4 text-danger">Delete Movie</h1>
            <hr />

            <div class="alert alert-warning" role="alert">
                <h4 class="alert-heading">Are you sure you want to delete this movie?</h4>
                <p>This action cannot be undone.</p>
            </div>

            <div class="card">
                <div class="card-body">
                    <dl class="row">
                        <dt class="col-sm-3">Title</dt>
                        <dd class="col-sm-9">@Model.Title</dd>

                        <dt class="col-sm-3">Description</dt>
                        <dd class="col-sm-9">@Model.Description</dd>

                        <dt class="col-sm-3">Genre</dt>
                        <dd class="col-sm-9">@Model.Genre</dd>

                        <dt class="col-sm-3">Director</dt>
                        <dd class="col-sm-9">@Model.Director</dd>

                        <dt class="col-sm-3">Release Year</dt>
                        <dd class="col-sm-9">@Model.ReleaseYear</dd>

                        <dt class="col-sm-3">Price per Day</dt>
                        <dd class="col-sm-9">@Model.PricePerDay.ToString("C")</dd>

                        <dt class="col-sm-3">Total Copies</dt>
                        <dd class="col-sm-9">@Model.TotalCopies</dd>

                        <dt class="col-sm-3">Available Copies</dt>
                        <dd class="col-sm-9">@Model.AvailableCopies</dd>
                    </dl>
                </div>
            </div>

            <hr />

            <form asp-action="Delete" method="post">
                <input type="hidden" asp-for="Id" />
                <div class="d-flex gap-2">
                    <button type="submit" class="btn btn-danger btn-lg">Delete Movie</button>
                    <a asp-action="Index" class="btn btn-outline-secondary btn-lg">Cancel</a>
                </div>
            </form>
        </div>
    </div>
</div>