@model GBMovieRentalSite.ViewModels.RentalViewModel

@{
    ViewData["Title"] = "Rent Movie";
}

<div class="container mt-4">
    <div class="row">
        <div class="col-md-6 offset-md-3">
            <h1 class="display-4">Rent Movie</h1>
            <hr />

            <div class="card mb-4">
                <div class="card-body">
                    <h3 class="card-title">@Model.MovieTitle</h3>
                    <p class="card-text">
                        <span class="badge bg-success">@Model.AvailableCopies available</span>
                    </p>
                    <p class="h4 text-primary">@Model.PricePerDay.ToString("C") / day</p>
                </div>
            </div>

            <form asp-action="Confirm" method="post">
                <input type="hidden" asp-for="MovieId" />
                <input type="hidden" asp-for="MovieTitle" />
                <input type="hidden" asp-for="PricePerDay" />
                <input type="hidden" asp-for="AvailableCopies" />

                <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

                <div class="mb-3">
                    <label asp-for="RentalDays" class="form-label"></label>
                    <input asp-for="RentalDays" class="form-control form-control-lg" type="number" min="1" max="7" id="rentalDaysInput" />
                    <span asp-validation-for="RentalDays" class="text-danger"></span>
                    <small class="form-text text-muted">Select rental period (1-7 days)</small>
                </div>

                <div class="card bg-light mb-3">
                    <div class="card-body">
                        <div class="d-flex justify-content-between align-items-center">
                            <span class="h5 mb-0">Total Price:</span>
                            <span class="h3 text-success mb-0">
                                <span id="totalPrice">@Model.TotalPrice.ToString("C")</span>
                            </span>
                        </div>
                    </div>
                </div>

                <div class="d-flex gap-2">
                    <button type="submit" class="btn btn-primary btn-lg flex-fill">Continue to Confirm</button>
                    <a asp-controller="Movies" asp-action="Details" asp-route-id="@Model.MovieId" class="btn btn-outline-secondary btn-lg">Cancel</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

    <script>
        // Uppdatera totalpris dynamiskt när användaren ändrar antal dagar
        document.getElementById('rentalDaysInput').addEventListener('input', function() {
            var days = parseInt(this.value) || 1;
            var pricePerDay = @Model.PricePerDay;
            var totalPrice = days * pricePerDay;

            // Formatera som valuta (SEK)
            document.getElementById('totalPrice').textContent =
                totalPrice.toLocaleString('sv-SE', { style: 'currency', currency: 'SEK' });
        });
    </script>
}