@model GBMovieRentalSite.Models.Movie

@{
    ViewData["Title"] = Model.Title;
}

<div class="container mt-4">
    <div class="row">
        <div class="col-md-4">
            @if (!string.IsNullOrEmpty(Model.ImageUrl))
            {
                <img src="@Model.ImageUrl" class="img-fluid rounded" alt="@Model.Title" />
            }
            else
            {
                <div class="bg-secondary d-flex align-items-center justify-content-center rounded" style="height: 500px;">
                    <i class="bi bi-film" style="font-size: 6rem; color: white;"></i>
                </div>
            }
        </div>

        <div class="col-md-8">
            <h1 class="display-4">@Model.Title</h1>

            <div class="mb-3">
                <span class="badge bg-primary">@Model.Genre</span>
                <span class="badge bg-secondary">@Model.ReleaseYear</span>
            </div>

            <p class="lead">@Model.Description</p>

            <hr />

            <dl class="row">
                <dt class="col-sm-3">Director</dt>
                <dd class="col-sm-9">@Model.Director</dd>

                <dt class="col-sm-3">Price per day</dt>
                <dd class="col-sm-9">
                    <span class="h4 text-primary">@Model.PricePerDay.ToString("C")</span>
                </dd>

                <dt class="col-sm-3">Availability</dt>
                <dd class="col-sm-9">
                    @if (Model.AvailableCopies > 0)
                    {
                        <span class="badge bg-success">@Model.AvailableCopies of @Model.TotalCopies available</span>
                    }
                    else
                    {
                        <span class="badge bg-danger">Out of stock</span>
                    }
                </dd>
            </dl>

            <hr />

            <div class="d-flex gap-2">
                @if (Model.AvailableCopies > 0)
                {
                    @if (User.Identity.IsAuthenticated)
                    {
                        <a href="#" class="btn btn-primary btn-lg">Rent this movie</a>
                    }
                    else
                    {
                        <a asp-area="Identity" asp-page="/Account/Login" class="btn btn-primary btn-lg">Login to rent</a>
                    }
                }
                else
                {
                    <button class="btn btn-secondary btn-lg" disabled>Currently unavailable</button>
                }

                <a asp-action="Index" class="btn btn-outline-secondary btn-lg">Back to list</a>
            </div>
        </div>
    </div>
</div>